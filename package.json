{
    "name": "react-modern-gantt",
    "version": "0.2.0",
    "description": "A modern, customizable Gantt chart component for React applications",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "npm run dev & npm run start:example",
        "start:example": "cd example && npm start",
        "lint": "eslint src --ext .ts,.tsx",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "prepare": "npm run build"
    },
    "keywords": [
        "react",
        "gantt",
        "chart",
        "timeline",
        "project-management",
        "scheduler",
        "planning",
        "roadmap"
    ],
    "author": "Mika Stiebitz",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/react-modern-gantt.git"
    },
    "peerDependencies": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^21.1.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-typescript": "^8.5.0",
        "@rollup/pluginutils": "^4.2.1",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^27.4.0",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "autoprefixer": "^10.4.20",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.4.7",
        "jest-environment-jsdom": "^27.4.7",
        "postcss": "^8.4.5",
        "prettier": "^2.5.1",
        "rollup": "^2.66.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-terser": "^7.0.2",
        "tailwindcss": "^4.0.14",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@tailwindcss/postcss": "^4.0.14",
        "date-fns": "^2.30.0"
    },
    "overrides": {
        "@testing-library/react": {
            "react": "^19.0.0",
            "react-dom": "^19.0.0"
        }
    }
}
